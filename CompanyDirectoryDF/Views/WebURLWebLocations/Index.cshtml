@model IEnumerable<CompanyDirectoryDF.Models.WebURLWebLocation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>


<table class="table">
    <tr>
    
        <th>
            Site Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WebURL.URL)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.WebLocation.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WebURL.URL)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
